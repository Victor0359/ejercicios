<body>
    <div class="container mt-5">


        <form id="FormEditar" action="/contratos/modificar" method="POST" class="row"
            onsubmit="return confirmarModificacion();">
            <div class="mt-2 mb-3 text-center"> <h1><b>Modificar Contrato</b></h1>
            </div>
            <div class="row mt-3 mb-3">

                <div class="col md-3 mb-3">
                    <input type="hidden" name="id_contratos" value="<%= contrato.id_contratos %>">

                    <div class="col md-3 mb-3">
                    <label for="id_propietarios" class="form-label">Propietario</label>
 
                        <select class="form-control" name="id_propietarios" required>
                            <% propietarios.forEach(function(p) { %>
                                <option value="<%= p.id_propietarios %>" <%=p.id_propietarios===contrato.id_propietarios
                                    ? 'selected' : '' %>>
                                    <%= p.apellido %>
                                </option>
                                <% }) %>
                                    </select>

                    </div>
                </div>
                <div class=" col md-3 mb-3">
                    <label for="id_inquilinos" class="form-label">Inquilino</label>
                    
                    <select class="form-control" name="id_inquilinos" required>
                        <% inquilinos.forEach(function(i) { %>
                            <option value="<%= i.id_inquilinos %>" <%=i.id_inquilinos===contrato.id_inquilinos
                                ? 'selected' : '' %>>
                                <%= i.apellido %>
                            </option>
                            <% }) %>
                    </select>
                </div>
                <div class="col md-3 mb-3">
                    
                    <label for="id_propiedades" class="form-label">Propiedad</label>
                    <select class="form-control" name="id_propiedades" required>
                        <% propiedades.forEach(function(prop) { %>
                            <option value="<%= prop.id_propiedades %>" <%=prop.id_propiedades===contrato.id_propiedades
                                ? 'selected' : '' %>>
                                <%= prop.direccion %>
                            </option>
                            <% }) %>
                    </select>
                </div>
            </div>
            <div class="row mb-3">
                <div class="col md-3 mb-3">
                    <label for="fecha_inicio" class="form-label">Fecha Inicio</label>
                    <input type="text" class="form-control" id="fecha_inicio" name="fecha_inicio" value=" <%= contrato.fecha_inicio ? new Date(contrato.fecha_inicio).toLocaleDateString('es-AR') : ''
                            %>">
                </div>

                <div class="col md-3 mb-3">
                    <label for="precio_inicial" class="form-label">Precio Inicial</label>
                    <input type="text" class="form-control" id="precio_inicial" name="precioinicial"
                        value="<%= contrato.precioinicial %>">
                </div>

                <div class="col md-3 mb-3">
                    <label for="precio_actual" class="form-label">Precio actual</label>
                    <input type="text" class="form-control" id="precio_actual" name="precioactual"
                        value="<%= contrato.precioactual %>">
                </div>
                <div class="col md-3 mb-3">
                    <label for="honorarios" class="form-label">Honorarios</label>
                    <input type="text" class="form-control" id="honorarios" name="honorarios"
                        value="<%= contrato.honorarios %>">

                </div>

                <div class="row mb-3">

                    <div class="col md-3 mb-3">
                        <label for="duracion_cont" class="form-label">Duración Contrato</label>
                        <input type="text" class="form-control" id="duracion_cont" name="duracion_contrato"
                            value="<%= contrato.duracion_contrato %>">
                    </div>

                </div>
                <div class="col md-3 mb-3 mt-4 pt-2">
                    <button type="submit" class="btn btn-primary w-100">Guardar Cambios</button>
                    <a href="/contratos" class="btn btn-secondary mt-3 w-75">Cancelar</a>
                </div>
            </div>
        </form>
    </div>
    <script>
        function confirmarModificacion() {
            return confirm("¿Está seguro que desea modificar este registro?");
        }
    </script>
    <!-- <link rel="stylesheet" href="css/inquilinos.css"> -->
</body>